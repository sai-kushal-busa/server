<!DOCTYPE html>
<head>
<title>Product Description App</title>
<link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
<div class="todo-container">
<h2>Product List</h2>
<div class="todo">
<!-- <form action="/" method="POST" class="todo-header">
<input type="text" name="content" class="task-input" placeholder="Enter your task here">
<button type="submit"><span class="fas fa-plus"></span></button>
</form> -->
<button id="showFormButton" class="btn btn-primary"onclick="showForm()">Add Product</button>
    <form id="taskForm" action="/" method="POST" class="todo-header" style="display: none;">
        <input type="text" name="pname" class="task-input" placeholder="Enter your product name here">
        <input type="text" name="pdes" class="task-input" placeholder="Enter your product description here">
        <input type="file" name="productImage" class="task-input">
        <button type="submit"><span class="fas fa-plus"></span></button>
    </form>
<ul class="todo-list">
    <!-- <button onclick="myFunction()">Show Snackbar</button> -->
    <% todos.forEach(details => { %>
    <li class="todo-list-item">
    <div class="todo-list-item-name"><%= details.title %></div>
    <a href="/edit/<%= details._id %>" class="edit">
    <span class="fas fa-edit"></span>
    </a>
    <a href="/remove/<%= details._id %>" class="remove">
    <span class="fas fa-times"></span>
    
    </a>
    </li>
    <% }) %>
    </ul>
</div>
</div>
<!-- <div id="snackbar"></div> -->
<script>

    var count = 0;
    function showForm() {
        var form = document.getElementById("taskForm");
  
        if (count % 2 === 0) {
            form.style.display = "block";
        } else {
            form.style.display = "none";
        }
  
    count++;
        
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

</body>